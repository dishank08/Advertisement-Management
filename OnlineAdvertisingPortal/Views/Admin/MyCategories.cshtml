@model IEnumerable<OnlineAdvertisingPortal.Models.Categories>

@{
    ViewBag.Title = "MyCategories";
}

<h2>MyCategories</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Categoryname)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Categoryname)
        </td>
        <td colspan="2">
            <img src="@Url.Content(item.CategoryPath)" width="200" height="200" />
        </td>
        <td>
            <a href="/Admin/DeleteCategory?Cat=@item.Categoryname"
               class="btn btn-primary">Delete</a>
        </td>
    </tr>
}

</table>
<h3>
    @Html.ActionLink("Create New", "CreateCategory")
</h3>